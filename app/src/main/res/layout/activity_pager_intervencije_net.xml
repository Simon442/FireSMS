<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/pagerView"
        android:layout_width="532dp"
        android:layout_height="325dp"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="216dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/alertdialog_4" />

    <Button
        android:id="@+id/notComingBtn"
        android:layout_width="57dp"
        android:layout_height="58dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="444dp" />

    <Button
        android:id="@+id/comingBtn"
        android:layout_width="57dp"
        android:layout_height="58dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="444dp" />

    <Button
        android:id="@+id/comingLaterBtn"
        android:layout_width="57dp"
        android:layout_height="58dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="444dp" />

    <Button
        android:id="@+id/silenceCloseBtn"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        tools:layout_editor_absoluteX="290dp"
        tools:layout_editor_absoluteY="444dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="155dp"
        android:layout_height="31dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="129dp"
        android:hint="ime_pozivnika"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/pagerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="339dp"
        android:layout_height="178dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="26dp"
        android:background="#7A9F9F9F"
        android:hint="sms_sporoÄilo"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/notComingBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/pagerView"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>